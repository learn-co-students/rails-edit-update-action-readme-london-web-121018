<%= form_for @article do |f| %>
  <%= f.label 'Article Title' %><br>
  <%= f.text_field :title %><br>
 
  <%= f.label 'Article Description' %><br>
  <%= f.text_area :description %><br>
 
  <%= f.submit "Submit Article" %>
<% end %>

<% if flash[:notice] %>
   <div class="notice"><%= flash[:notice] %></div>
 <% end %>